{
  "name": "validibot-static",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass --style=compressed --quiet-deps --load-path=node_modules --load-path=validibot/static/src/scss validibot/static/src/scss/project.scss:validibot/static/css/project.css",
    "build:js": "esbuild validibot/static/src/ts/project.ts --bundle --minify --sourcemap --outdir=validibot/static/js",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "sass --watch --quiet-deps --load-path=node_modules validibot/static/src/scss/project.scss:validibot/static/css/project.css",
    "watch:js": "esbuild validibot/static/src/ts/project.ts --bundle --sourcemap --outdir=validibot/static/js --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.2.10",
    "esbuild": "^0.25.3",
    "sass": "latest",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "bootstrap": "^5.3.7",
    "bootstrap-icons": "^1.13.1",
    "chart.js": "^4.4.6",
    "htmx.org": "^2.0.6"
  }
}
